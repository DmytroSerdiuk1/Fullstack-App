<form method="post" action="/courses/edit">
  <div class="mb-3">
    <label for="exampleInputTitle" class="form-label">Title</label>
    <input name="title" value="{{course.title}}" type="text" class="form-control" id="exampleInputTitle" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPrice" class="form-label">Price RUB</label>
    <input type="number" value="{{course.price}}" name="price" class="form-control" id="exampleInputPrice">
  </div>
  <div class="mb-3">
    <label for="exampleInputImg" class="form-label">Imagine URL</label>
    <input type="text" value="{{course.img}}" name="img" class="form-control" id="exampleInputImg">
  </div>
  <input type="hidden" value="{{course._id}}" name="id">
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
<form class="mt-3" action="/courses/remove" method="post">
  <input type="hidden" name="id" value="{{course.id}}">
  <button type='submit' class="btn btn-danger">Remove</button>
</form>